{
  "name": "identity-management",
  "version": "0.1.0",
  "description": "Role-based identity management module",
  "main": "bin/wwww",
  "scripts": {
    "start-dev": "nodemon -r dotenv/config ./bin/www dotenv_config_path=./env/.development.env"
  },
  "author": "Ben Bolthouse",
  "license": "ISC",
  "dependencies": {
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^10.0.0",
    "dotenv-cli": "^4.0.0",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "pg": "^8.6.0",
    "sequelize": "^6.6.2",
    "sequelize-cli": "^6.2.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "chai": "^4.3.4",
    "chai-spies": "^1.0.0",
    "eslint": "^7.29.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.4",
    "mocha": "^9.0.1",
    "nodemon": "^2.0.7"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "ignorePatterns": [
      "models/index.js"
    ],
    "env": {
      "es6": true,
      "browser": true
    },
    "rules": {
      "brace-style": [
        "error",
        "stroustrup"
      ],
      "no-unused-vars": [
        "warn"
      ],
      "no-var": [
        "off"
      ],
      "one-var": [
        "off"
      ],
      "arrow-body-style": [
        "off"
      ],
      "prefer-arrow-callback": [
        "off"
      ]
    }
  }
}
